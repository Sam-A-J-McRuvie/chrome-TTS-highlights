{
    "manifest_version": 3,
    "name": "Text To Speech Highlighter",
    "version": "0.1.1",
    "minimum_chrome_version": "23",
    "description": "Highlight text while reading it out loud",
    "icons": {},
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "tts",
        "scripting",
        "contextMenus",
        "sidePanel",
        "ttsEngine"
    ],
    "host_permissions": ["*://*/*"],
    "tts_engine": {
        "voices": [
            {
                "voice_name": "Microsoft George - English (United Kingdom)",
                "lang": "en-GB",
                "event_types": ["start", "marker", "end", "word"]
            }
        ]
    },                
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "side_panel": {
        "title": {
            "de": "Text To Speech Highlighter",
            "en": "Text To Speech Highlighter"
        },
        "default_path": "sidePanel/index.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [
                "lib/Highlighter.js",
                "content-script.js"
            ],
            "run_at": "document_end"
        }
    ]
}
